#!/bin/bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

if [ -z "$1" ]; then
    echo -e "${RED}Error: No switch name provided${NC}"
    echo "Usage: $0 <switch-name>"
    exit 1
fi

SWITCH_NAME="$1"
RE_NAME="${SWITCH_NAME}-re"
PFE_NAME="${SWITCH_NAME}-pfe"
INTERNAL_NET="${SWITCH_NAME}-internal"

echo -e "${YELLOW}Deleting vQFX: $SWITCH_NAME${NC}"

# Stop and delete RE
if virsh dominfo "$RE_NAME" &>/dev/null; then
    virsh destroy "$RE_NAME" 2>/dev/null || true
    virsh undefine "$RE_NAME"
    rm -f "/var/lib/libvirt/images/${RE_NAME}.qcow2"
    echo -e "${GREEN}✓ Deleted RE: $RE_NAME${NC}"
fi

# Stop and delete PFE
if virsh dominfo "$PFE_NAME" &>/dev/null; then
    virsh destroy "$PFE_NAME" 2>/dev/null || true
    virsh undefine "$PFE_NAME"
    rm -f "/var/lib/libvirt/images/${PFE_NAME}.qcow2"
    echo -e "${GREEN}✓ Deleted PFE: $PFE_NAME${NC}"
fi

# Delete internal network
if virsh net-info "$INTERNAL_NET" &>/dev/null; then
    virsh net-destroy "$INTERNAL_NET" 2>/dev/null || true
    virsh net-undefine "$INTERNAL_NET"
    echo -e "${GREEN}✓ Deleted network: $INTERNAL_NET${NC}"
fi

echo -e "${GREEN}vQFX switch deleted: $SWITCH_NAME${NC}"
